<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:padding="8dp"
    android:paddingTop="12dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/ivClose1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/close"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivWalletConnect"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/wallet_connect_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tvPlease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To proceed please connect your wallet with CPO"
        style="@style/TextViewStyleLabelSizeSemi14"
        android:textColor="@color/textHeader"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivWalletConnect"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BlackButtonStyle"
        android:text="Connect"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPlease"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>